<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/theme_top_preview_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_tv_local"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/theme_top_preview_selected"
            android:gravity="center"
            android:text="本地"
            android:textColor="@color/tab_text_normal"
            android:textSize="@dimen/tab_text_size" />

        <TextView
            android:id="@+id/id_tv_online"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="在线"
            android:textColor="@color/tab_text_normal"
            android:textSize="@dimen/tab_text_size" />
    </LinearLayout>

    <!--
         <View
        android:id="@+id/id_tabline"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:background="@color/tabline_bg" />    -->

</LinearLayout>